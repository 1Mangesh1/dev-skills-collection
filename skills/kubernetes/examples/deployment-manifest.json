{
  "k8s_deployment": {
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "my-app",
      "namespace": "production"
    },
    "spec": {
      "replicas": 3,
      "selector": {
        "matchLabels": {
          "app": "my-app"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app": "my-app",
            "version": "1.0.0"
          }
        },
        "spec": {
          "containers": [
            {
              "name": "app",
              "image": "my-app:1.0.0",
              "ports": [{"containerPort": 8080}],
              "resources": {
                "requests": {"cpu": "100m", "memory": "128Mi"},
                "limits": {"cpu": "500m", "memory": "512Mi"}
              }
            }
          ]
        }
      }
    }
  }
}
